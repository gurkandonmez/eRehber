
@model eRehber.Entities.Kullanici
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<link href="~/Content/stil.css" rel="stylesheet" />
<div class="col-9" style="height:auto"  >
    <div class="card bg-light mt-2 " >

        <div class="card-header bg-dark">
            <div class="card-title">
                Kullanıcı Ayarları

            </div>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("Index", "Kullanici", FormMethod.Post))
            {

                <div class="row">


                    <div class="col-8">
                        <div class="form-group">

                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Sifre, new { htmlAttributes = new { @class = "form-control", @placeholder = "Yeni Şifre",@type="password" } })

                            </div>
                        </div>

                    </div>
                    <div class="col-4">
                        <input id="btnKaydet" type="submit" data-toggle="modal" value="Kaydet" class="btn btn-success  btn-block" />
                    </div>
                    <div class="col-8">
                        @ViewBag.Mesaj
                    </div>
                </div>
            }

        </div>
    </div>

</div>


