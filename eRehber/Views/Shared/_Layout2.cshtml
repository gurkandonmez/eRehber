@using eRehber.Entities;
@{
    Layout = null;
}
@{
    Kullanici user = null;
    if (Session["login"] != null)
    {
        user = Session["login"] as Kullanici;
    }
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Yönetim Paneli</title>
    <script src="~/Scripts/jquery-3.6.0.min.js"></script>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/sweetalert2.min.js"></script>
    <link href="~/Scripts/sweetalert2.css" rel="stylesheet" />

    <link href="~/Content/stil.css" rel="stylesheet" />

</head>
<body>

    <nav class="navbar navbar-expand-lg  navbar-dark bg-dark">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo03" aria-controls="navbarTogglerDemo03" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <a class="navbar-brand" href="/Home/Index">e-Rehber</a>

        <div class="collapse navbar-collapse" id="navbarTogglerDemo03">
            <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                <li class="nav-item active">
                    <a class="nav-link" href="/Home/Index">Anasayfa</a>
                </li>


            </ul>
            <ul class="navbar-nav  ml-auto">
                @if (Session["login"] != null)
                {
                    <li class="nav-item">
                        <a class="nav-link text-white" href="/Giris/Logout"> @user.KullaniciAdi</a>
                    </li>
                    <li class="nav-item">



                        <a class="nav-link text-warning" href="/Giris/Logout"> Çıkış</a>


                    </li>
                }
            </ul>
        </div>
    </nav>
    <div class="container-fluid">
        <div class="row">
            <div class="jumbotron jumbotron-fluid  mb-lg-0 jumbo-arka">
                <div class="container">
                    <h1 class="display-4"><img src="~/Content/img/logo.png" width="100px" height="100px" /> e-Rehber Uygulaması</h1>
                    <p class="lead ">
                        Bu uygulama, santral iletişimini hızlı ve kolay hale getirmek için geliştirilmiştir.
                    </p>
                </div>
            </div>
            <div class="col-3 mt-2 mb-2">
                <div class="list-group">
                    <button type="button" class="list-group-item list-group-item-action bg-dark text-white" aria-current="true">
                        <h5> Yönetim</h5>
                    </button>
                    <a href="/Personel/Index/" class="list-group-item list-group-item-action">Rehber Ayarları</a>
                    <a href="/Kullanici/Index/" class="list-group-item list-group-item-action">Kullanıcı Ayarları</a>
                    @if (user != null)
                    {
                        if (user.Yonetim == true)
                        {
                            <a href="/Sube/Index/" class="list-group-item list-group-item-action">Şube Ayarları</a>

                            <a href="/Editor/Index/" class="list-group-item list-group-item-action">Onay Bekleyen Editörler</a>
                        }

                    }


                </div>
            </div>
            @RenderBody()

        </div>
    </div>


</body>

</html>
